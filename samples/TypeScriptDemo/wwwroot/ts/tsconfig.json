{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../lib/",
    "lib": [ "ES2015", "DOM" ],
    "module": "ES6",
    "importHelpers": false,
    "isolatedModules": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../js",
    "moduleResolution": "Node",
    "removeComments": false,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "typeRoots": [ "../lib/@types" ]
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
  ]
}
